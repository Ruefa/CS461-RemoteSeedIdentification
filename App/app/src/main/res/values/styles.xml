<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/transparent</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="actionMenuTextColor">@color/black</item>
        <item name="actionBarStyle">@style/Widget.Styled.ActionBar</item>
        <item name="actionBarSize">35dp</item>
    </style>

    <style name="LoginTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/transparent</item>
        <item name="android:background">@color/primary_background</item>
        <item name="editTextStyle">@style/bordered_edit_text</item>
        <item name="buttonStyle">@style/ColoredButtonStyle</item>
        <item name="actionMenuTextColor">@color/black</item>
        <item name="actionBarStyle">@style/Widget.Styled.ActionBar</item>
        <item name="actionBarSize">35dp</item>
    </style>

    <style name="ResultsTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/snow_white</item>
        <item name="android:background">@color/snow_white</item>
        <item name="actionMenuTextColor">@color/black</item>
        <item name="actionBarStyle">@style/Widget.Styled.ActionBar</item>
        <item name="actionBarSize">35dp</item>
    </style>

    <style name="ResultsRVTheme">
        <item name="android:textSize">24sp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingLeft">10dp</item>
    </style>

    <style name="NavDrawerTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:background">@color/dark_grey</item>
        <item name="background">@color/dark_grey</item>
    </style>

    <style name="NavDrawerListTheme">
        <item name="android:paddingBottom">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="bordered_edit_text">
        <item name="android:background">@drawable/edit_text_border</item>
        <item name="android:gravity">left</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/dark_grey</item>
    </style>

    <style name="AnalyzeDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorAlertDialogListItem">@color/white</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="ColoredButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_background</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
    </style>

    <style name="Widget.Styled.ActionBar" parent="@style/Widget.AppCompat.Light.ActionBar">
        <item name="titleTextStyle">@style/ActionBarTitleText</item>
    </style>

    <style name="ActionBarTitleText" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/black</item>
    </style>

    <color name="red">#FF0000</color>
    <color name="soft_green">#90C048</color>
    <color name="transparent">#00000000</color>
    <color name="black">#000000</color>
    <color name="grey">#D2D2D2</color>
    <color name="dark_grey">#939393</color>
    <color name="soft_blue">#90D4E7</color>
    <color name="blue">#067bc2</color>
    <color name="light_orange">#f37748</color>
    <color name="white">#FFFFFF</color>
    <color name="snow_white">#fafafa</color>
    <color name="charcoal">#262322</color>
    <color name="gold">#ecc30b</color>
    <color name="light_red">#d56062</color>
    <color name="primary_background">@color/snow_white</color>
    <color name="primary_foreground">@color/charcoal</color>

</resources>
