<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/transparent</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <style name="LoginTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/transparent</item>
        <item name="android:background">@color/soft_blue</item>
        <item name="editTextStyle">@style/bordered_edit_text</item>
    </style>

    <style name="ResultsTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/soft_blue</item>
        <item name="android:background">@color/soft_blue</item>
        <item name="actionBarSize">35dp</item>
    </style>

    <style name="ResultsRVTheme">
        <item name="android:textSize">24sp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingLeft">10dp</item>
    </style>

    <style name="NavDrawerTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:background">@color/dark_grey</item>
        <item name="background">@color/dark_grey</item>
    </style>

    <style name="NavDrawerListTheme">
        <item name="android:paddingBottom">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="bordered_edit_text">
        <item name="android:background">@drawable/edit_text_border</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/dark_grey</item>
    </style>

    <style name="AnalyzeDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorAlertDialogListItem">@color/white</item>
        <item name="android:textAlignment">center</item>
    </style>

    <color name="red">#FF0000</color>
    <color name="soft_green">#90C048</color>
    <color name="transparent">#00000000</color>
    <color name="black">#000000</color>
    <color name="grey">#D2D2D2</color>
    <color name="dark_grey">#939393</color>
    <color name="soft_blue">#90D4E7</color>
    <color name="white">#FFFFFF</color>

</resources>
